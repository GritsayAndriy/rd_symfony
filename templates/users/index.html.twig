{% extends 'base.html.twig' %}
{% block body %}
    <a href="{{ path('users_create') }}">Create</a>
    <table>
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Dob
            </th>
            <th>
                Action
            </th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <th>
                {{ user.id }}
            </th>
            <th>
                {{ user.firstName }}
            </th>
            <th>
                {{ user.lastName }}
            </th>
            <th>
                {{ user.email }}
            </th>
            <th>
                {{ user.dob|date }}
            </th>
            <th>
                <a href="{{ path('users_delete', {'id': user.id}) }}">Delete</a>
                <a href="{{ path('users_edit', {'id': user.id}) }}">Edit</a>
            </th>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}